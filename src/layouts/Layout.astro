---
import '../styles/global.css';

interface Props {
  title?: string;
}

const { title = 'Brad Bennett' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Brad Bennett - Music, Art, Writing" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen">
    <header class="fixed top-0 left-0 right-0 z-50 bg-[--color-bg]/90 backdrop-blur-sm border-b border-[--color-border]">
      <nav class="max-w-6xl mx-auto px-6 py-4 flex justify-between items-center">
        <a href="/" class="text-xl font-medium tracking-tight">Brad Bennett</a>
        <div class="flex gap-6 text-sm text-[--color-text-muted]">
          <a href="/" class="hover:text-[--color-accent] transition-colors">Work</a>
          <a href="/about" class="hover:text-[--color-accent] transition-colors">About</a>
          <a href="/contact" class="hover:text-[--color-accent] transition-colors">Contact</a>
        </div>
      </nav>
    </header>
    <main class="pt-20">
      <slot />
    </main>
  </body>
</html>
